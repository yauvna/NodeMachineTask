<!doctype html>
<html lang="en">

<head>
  <title>Products</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<body>
  <header>
    <%- include('../layout', { body: '' }) %>
  </header>
  <main>

    <div class="container">

      <h2>Products</h2>
            <div class="d-flex justify-content-end">
               <a name="" id="" class="btn btn-outline-primary" href="/products/new" role="button">Add Product</a>
            </div>
     

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Product Id</th>
              <th>Product Name</th>
              <th>Category Id</th>
              <th>Category Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(p=> { %>
              <tr>
                <td>
                  <%= p.ProductId %>
                </td>
                <td>
                  <%= p.ProductName %>
                </td>
                <td>
                  <%= p.CategoryId %>
                </td>
                <td>
                  <%= p.CategoryName %>
                </td>
                <td>
                  <a name="" id="" class="btn btn-outline-warning" href="/products/<%= p.ProductId %>/edit"
                    role="button">Edit</a>

                  <form method="POST" action="/products/<%= p.ProductId %>?_method=DELETE" style="display:inline">
                    <button type="submit" class="btn btn-outline-danger">
                      Delete
                    </button>

                  </form>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>

      <div class="pagination">Go to page: 
  <% for(let i = 1; i <= totalPages; i++) { %>
    <a href="?page=<%= i %>" class="<%= i === currentPage ? 'text-dark fw-bold px-2 text-decoration-none' : 'text-primary px-2 text-decoration-underline' %>">
      <%= i %>
    </a>
  <% } %>
</div>

    </div>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
</body>

</html>